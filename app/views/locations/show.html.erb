<div class="card mb-2">
  <div class="card-header">
    <h3><%= @location.site_name %></h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Address</h5>
    <div>
        <%= @location.address1 %>
    </div>
    <div>
         <%= @location.address2 %>
    </div>
    <div   >
        City:<%= @location.city %>  
    </div>
    <div>
        Postcode:<%= @location.postcode %>   
    </div>
      <div>
        <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-large btn-primary" %>
        <%= link_to 'Delete', location_path, method: :delete, data:{ confirm: "Are you sure? "}, class:"btn btn-large btn-danger" %>
    </div>
  </div>

</div>
<div class="card">
    <div class="card-header">
        <%= link_to 'Houses', location_houses_path(params[:id]), class:"h3" %>
    </div>
    <div class="card-body">
        <% @location.houses.each do |house| %>
            <p><%= house.sales_name %></p>
        <% end %>
    </div>
    <div class="card-footer">
        <%= link_to 'New House', new_location_house_path(params[:id]), class:"d-flex justify-content-center" %>
    </div>
</div>
