<div class="container">
  <%= form_with(model: @location, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label :site_name, class:"col-form-label col-2" %>
      <%= f.text_field :site_name, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :address1, "Address line 1", class:"col-form-label col-2" %>
      <%= f.text_field :address1, class:"form-control col-10"  %>
    </div>
    
    <div class="form-group row">
      <%= f.label :address2, "Address line 2", class:"col-form-label col-2" %>
      <%= f.text_field :address2, class:"form-control col-10"  %>
    </div>
        
    <div class="form-group row">
      <%= f.label :city, class:"col-form-label col-2" %>
      <%= f.text_field :city, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :postcode, class:"col-form-label col-2" %>
      <%= f.text_field :postcode, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :number_of_plots, class:"col-form-label col-2" %>
      <%= f.text_field :number_of_plots, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :vo_cost, class:"col-form-label col-2" %>
      <%= f.text_field :vo_cost, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :start_date, class:"col-form-label col-2" %>
      <%= f.date_field :start_date, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :layout, class:"col-form-label col-2" %>
      <%= f.file_field :layout, class:"form-control col-10"  %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit class:"btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
