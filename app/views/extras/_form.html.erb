<%= form_with(model: @extra, local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :name, class:"col-form-label col-2"%>
    <%= f.text_field :name, class:"form-control col-10" %>
  </div>

  <div class="form-group row">
      <%= f.label :cost, class:"col-form-label col-2"%>
      <%= f.text_field :cost, class:"form-control col-10" %>
  </div>

  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

