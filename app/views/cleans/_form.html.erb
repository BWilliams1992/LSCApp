<div class="container">
  <%= form_with(model: @clean, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label "Location: ", class:"col-form-label col-2"%>
      <%= f.collection_select :location_id, Location.all, :id, :site_name %>
    </div>

    <div class="form-group row">
      <%= f.label "House: ", class:"col-form-label col-2"%>
      <%= f.collection_select :house_id, House.all, :id, :sales_name %>
    </div>

    <div class="form-group row">
      <%= f.label :plot, class:"col-form-label col-2" %>
      <%= f.text_field :plot, class:"form-control col-10"  %>
    </div>

    <div class="form-group row">
      <%= f.label :date, class:"col-form-label col-2"  %>
      <%= f.date_field :date, class:"form-control col-10"%>
    </div>

    <div class="form-group row">
      <%= f.label :clean_type, 'Type of Clean', class:"col-form-label col-2"  %>
      <%= f.text_field :clean_type, class:"form-control col-10" %>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit class:"btn btn-lg btn-primary" %>
    </div>

  <% end %>
</div>
