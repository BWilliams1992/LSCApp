<h1>Outstanding</h1>
<table class='table table-striped table-hover'>
  <thead>
    <th scope="col">Clean No*</th>
    <th scope="col">Date</th>
    <th scope="col">Clean Type </th>
    <th scope="col">Job created on </th>
  </thead>
  <% @cleans.each do |clean| %>
    <% if clean.completed == false || !clean.completed %>
      <tr scope="row">
        <td><%= link_to clean.id, clean %></td>
        <td><%= clean.date.strftime('%d/%m/%Y') %></td>
        <td><%= clean.clean_type %></td>
        <td><%= clean.created_at.strftime('%d/%m/%Y') %></td>
      </tr>
      <% end %>
  <% end %> 
</table>

<div>
  <%= link_to 'New Clean Job', new_clean_path %>
</div>

<h1>Completed</h1>
<table class='table table-striped table-hover'>
  <thead>
    <th scope="col">Clean No*</th>
    <th scope="col">Date</th>
    <th scope="col">Clean Type </th>
    <th scope="col">Job created on </th>
  </thead>
  <% @cleans.each do |clean| %>
    <% if clean.completed == true %>
      <tr scope="row">
        <td><%= link_to clean.id, clean %></td>
        <td><%= clean.date.strftime('%d/%m/%Y') %></td>
        <td><%= clean.clean_type %></td>
        <td><%= clean.created_at.strftime('%d/%m/%Y') %></td>
      </tr>
      <% end %>
  <% end %> 
</table>