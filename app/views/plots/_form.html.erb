<%= form_with(model: [@location, @location.plots.find(params[:id])], local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :house_id, class:"col-form-label col-2"  %>
    <%= f.collection_select :house_id, House.all, :id, :sales_name, {prompt: true}, {class:"form-control col-10"}%>
  </div>
  <div class="form-group row justify-content-end">
    <%= f.submit "Update house", class:"btn btn-lg btn-primary" %>
  </div>

<% end %>