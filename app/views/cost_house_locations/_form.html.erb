<%= form_with(model: [@location, @location.cost_house_locations.build], local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :cost, class:"col-form-label col-2"  %>
    <%= f.text_field :cost %>
  </div>

  <div class="form-group row">
    <%= f.label :house_id, class:"col-form-label col-2"  %>
    <%= f.collection_select :house_id, House.all, :id, :sales_name %>
  </div>

  <%= f.hidden_field :location_id, value: @location.id %>

  <%= f.submit %>

<% end %>